		<dependency>
			<groupId>com.eurodyn.qlack2.be</groupId>
			<artifactId>qlack2-be-explorer-api</artifactId>
      <version>${project.version}</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<configuration>
					<instructions>
						<Bundle-Description>QLACK2 :: Business Engine :: Rules Manager :: api</Bundle-Description>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
