<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.eurodyn.qlack2.fuse</groupId>
		<artifactId>qlack2-fuse-workflow-runtime</artifactId>
		<version>2.3.1-SNAPSHOT</version>
		<relativePath>..</relativePath>
	</parent>

	<artifactId>qlack2-fuse-workflow-runtime-impl</artifactId>
	<packaging>bundle</packaging>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<configuration>
					<instructions>
						<Bundle-Description>QLACK2 :: Fuse :: Workflow runtime :: impl</Bundle-Description>
						<Meta-Persistence>META-INF/persistence.xml</Meta-Persistence>
						<Import-Package>
							*,
							org.hibernate.proxy,javassist.util.proxy,org.hibernate,
							org.drools.persistence.info,
							org.jbpm.persistence.correlation,
							org.jbpm.persistence.processinstance,
							org.jbpm.services.task.query,
							org.jbpm.services.task.impl.model,
							org.jbpm.services.task.audit.impl.model,
							org.jbpm.executor.entities,
							org.jbpm.runtime.manager.impl.jpa,
							org.kie.internal.task.api.model,
							org.jbpm.services.task.internals.lifecycle
						</Import-Package>
						<Q-Liquibase-ChangeLog>db/qlack2-fuse-workflow-runtime-impl.liquibase.changelog.xml</Q-Liquibase-ChangeLog>
					</instructions>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<version>${build-helper-maven-plugin.version}</version>
				<executions>
					<execution>
						<id>attach-config-admin-artifact</id>
						<phase>package</phase>
						<goals>
							<goal>attach-artifact</goal>
						</goals>
						<configuration>
							<artifacts>
								<artifact>
									<file>${basedir}/src/main/resources/OSGI-INF/karaf-config-email-handler.cfg</file>
									<type>cfg</type>
									<classifier>config-admin</classifier>
								</artifact>
							</artifacts>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.apache.aries.blueprint</groupId>
				<artifactId>blueprint-maven-plugin</artifactId>
				<version>${blueprint-maven-plugin.version}</version>
				<configuration>
					<scanPaths>
						<scanPath>com.eurodyn.qlack2.fuse.workflow.runtime.impl.bootstrap</scanPath>
					</scanPaths>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>blueprint-generate</goal>
						</goals>
						<phase>process-classes</phase>
					</execution>
				</executions>
			</plugin>
		</plugins>

		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
	</build>

